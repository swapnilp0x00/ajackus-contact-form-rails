<div style="float: right;">
  <%= form_tag contacts_path, method: 'GET' do%>
    <%= select_tag 'locale', options_for_select(@supported_languages.collect{ |u| [u, u] }, I18n.locale), onchange: 'this.form.submit();' %>
  <%end%>
</div>

<h1> <%= t :header %></h1>

<h5 style="color: green;"><%= notice %></h5>

<%= render 'form', contact: @contact %>

<%= link_to  t('back'), contacts_path %>

